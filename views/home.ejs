<%- include("partials\\header") -%>

<h1>Home</h1>

<p><%= homeStartingContent %></p>
<br>

<% posts.forEach(function(post){ %>
  <h3><%= post.title %></h3>
  <% let body = post.body.substring(0,100)+"..." %>
  <% let postTitle = post.title.replace(' ','-'); %>
  <%# didn't even need that, url would've worked w spaces %>
  <p><%=  body %>
    <a href="/posts/<%= postTitle %>" onclick="document.menuForm.submit();"><i>Keep Reading</i></a>
  </p>





  <br>
<% }); %>
<div class="container-fluid newButton">
  <form class="" action="/compose" method="get">
    <button type="submit" class="compose" name="button">+</button>

  </form>

</div>

